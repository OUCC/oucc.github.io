---
import Image from './Image.astro'
import bgImage from '@/assets/vrchat.webp'

interface Props {
  title: string
  copy: string
  compact?: boolean
}

const { title, copy, compact = false } = Astro.props
---

<section class:list={[compact ? 'h-32' : 'h-64', 'relative']}>
  <Image
    class="absolute w-full h-full object-cover bg-slate-600"
    src={bgImage}
    alt=""
    sizes="100vw"
  />
  <div
    class="absolute w-full h-full p-5 flex items-end text-white bg-[#00000099]"
  >
    <div class="flex flex-col gap-2">
      <h1 class="text-6xl font-extrabold">
        <span>{title}</span>
      </h1>
      <span>{copy}</span>
    </div>
  </div>
</section>
