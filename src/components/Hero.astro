---
import Image from './Image.astro'
import bgImage from '@/assets/vrchat.webp'

interface Props {
  title: string
  copy: string
  compact?: boolean
}

const { title, copy, compact = false } = Astro.props
---

<section class:list={[{ 'h-64': !compact }, 'relative']}>
  <Image
    class="absolute w-full h-full inset-0 object-cover bg-slate-600"
    src={bgImage}
    alt=""
    sizes="100vw"
    loading="eager"
  />
  <div class="absolute w-full h-full inset-0 bg-[#00000099]"></div>
  <div class="isolate h-full p-5 flex justify-center">
    <div
      class="w-full max-w-container flex flex-col justify-end gap-2 text-white"
    >
      <h1 class="text-6xl font-extrabold">
        <span>{title}</span>
      </h1>
      <span>{copy}</span>
    </div>
  </div>
</section>
