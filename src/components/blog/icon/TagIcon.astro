---
import Icon from '@/components/common/Icon.astro'
import { unreachable } from '@/utils/unreachable'
import type { CollectionEntry } from 'astro:content'
interface Props {
  tagImage: CollectionEntry<'tags'>['data']['image']
  size: number
}

const { tagImage, size } = Astro.props
---

{
  tagImage.type === 'svg' ? (
    <Icon
      name={`blog/${tagImage.name}`}
      alt={`${tagImage.name} のアイコン`}
      class={`h-[${size}px] w-[${size}px] aspect-square`}
    />
  ) : tagImage.type === 'external-url' ? (
    <img
      src={tagImage.url}
      height={size}
      width={size}
      class={`h-[${size}px] w-[${size}px] aspect-square`}
    />
  ) : (
    unreachable(tagImage)
  )
}
