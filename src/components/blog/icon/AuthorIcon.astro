---
import type { CollectionEntry } from 'astro:content'
import DefaultImage from '@/assets/avatar.svg'
import { Image } from 'astro:assets'
type Props = CollectionEntry<'authors'>['data'] & { size: number }

const { size, ...author } = Astro.props

const SvgImage =
  author.image &&
  author.image.format === 'svg' &&
  typeof author.image === 'function' &&
  (author.image as typeof DefaultImage)
---

{
  SvgImage ? (
    <SvgImage
      role="img"
      aria-label={`${author.name} のアイコン`}
      class="aspect-square rounded-full"
      size={size}
    />
  ) : author.image ? (
    <Image
      src={author.image}
      alt={`${author.name} のアイコン`}
      loading="lazy"
      layout={author.image.format === 'svg' ? 'none' : 'responsive'}
      class="aspect-square rounded-full"
      width={size}
      height={size}
    />
  ) : author.github ? (
    <img
      src={`https://github.com/${author.github}.png`}
      alt={`${author.name} のアイコン`}
      loading="lazy"
      class="aspect-square rounded-full"
      width={size}
      height={size}
    />
  ) : (
    <DefaultImage
      role="img"
      aria-label={`${author.name} のアイコン`}
      class="aspect-square rounded-full"
      size={size}
    />
  )
}
