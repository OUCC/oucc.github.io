---
import Icon from '@/components/common/Icon.astro'
interface Props {
  title: string
  date: string
  description: string
  place?: string
}

const { title, date, description, place } = Astro.props
---

<li
  class="flex min-w-[18rem] flex-1 flex-col gap-2 rounded-xl border border-slate-300 bg-white p-5 drop-shadow"
>
  <h2 class="text-xl font-bold">{title}</h2>
  <p class="flex items-center gap-2 text-slate-600">
    <Icon name="clock" alt="開催日時" class="w-4" />
    <span>{date}</span>
    <Icon name="map-pin" alt="開催場所" class="-mr-1 ml-2 w-4" />
    <span>{place ?? '未定'}</span>
  </p>
  <p class="text-justify-ja">
    {description}
  </p>
</li>
