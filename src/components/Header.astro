---
import OuccLogoSquare from './icon/OuccLogoSquare.astro'
import LinkButton from './LinkButton.astro'

interface Props {
  showJoinLink?: boolean
}

const { showJoinLink = false } = Astro.props
---

<header
  class="sticky top-0 z-10 h-16 px-5 flex justify-between bg-white border-b"
>
  <a href="/">
    <div class="h-full aspect-square">
      <OuccLogoSquare />
    </div>
  </a>
  <div class="flex flex-col justify-center">
    {showJoinLink && <LinkButton href="/join">Join OUCC!</LinkButton>}
  </div>
</header>
