---
interface Props {
  variant?: 'primary' | 'secondary'
}

const { variant = 'primary' } = Astro.props
---

<h2
  class:list={[
    'w-full border-x-[2rem] p-2.5 text-3xl font-bold',
    {
      'border-primary text-black': variant === 'primary',
      'border-secondary text-secondary': variant === 'secondary',
    },
  ]}
>
  <slot />
</h2>
