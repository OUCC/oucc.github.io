{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "BlogSchema": {
      "title": "BlogSchema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "title": "title"
        },
        "description": {
          "type": "string",
          "title": "description"
        },
        "author": {
          "type": "string",
          "title": "author"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "tags"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "keywords"
        }
      },
      "additionalProperties": false,
      "required": ["author", "description", "keywords", "tags", "title"]
    },
    "AuthorSchema": {
      "title": "AuthorSchema",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "name"
        },
        "description": {
          "type": "string",
          "title": "description"
        },
        "github": {
          "type": "string",
          "title": "github"
        },
        "image": {
          "type": "string",
          "title": "image"
        }
      },
      "additionalProperties": false,
      "required": ["name"]
    },
    "TagSchema": {
      "title": "TagSchema",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "name"
        },
        "description": {
          "type": "string",
          "title": "description"
        },
        "image": {
          "type": "string",
          "title": "image"
        },
        "fullSizeImage": {
          "type": "boolean",
          "title": "fullSizeImage"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "title": "url"
              },
              "text": {
                "type": "string",
                "title": "text"
              }
            },
            "additionalProperties": false,
            "required": ["text", "url"]
          },
          "title": "links"
        }
      },
      "additionalProperties": false,
      "required": ["name"]
    }
  }
}
