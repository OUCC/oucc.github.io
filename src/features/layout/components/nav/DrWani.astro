---
import Image from '@/components/Image.astro'
import drWaniImage from '@/assets/drwani_eng.webp'
---

<figure
  class:list={[
    'p-2 flex flex-col items-center gap-2',
    'translate-y-10 hover:translate-y-0 transition-transform ease-[cubic-bezier(0.34,1.56,0.64,1)] duration-200',
  ]}
>
  <figcaption class="text-sm opacity-50">
    大阪大学「ワニ博士」工学部の頃
  </figcaption>
  <Image
    class="w-24"
    src={drWaniImage}
    alt="大阪大学「ワニ博士」工学部の頃"
    sizes="96px"
    widths={[288, 192, 96]}
  />
</figure>
