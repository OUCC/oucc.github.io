---
import type { PictureComponentLocalImageProps } from '@astrojs/image/components'
import Icon from '@/components/Icon.astro'
import Image from '@/components/Image.astro'

interface Props {
  title: string
  image?: PictureComponentLocalImageProps['src']
}

const { title, image } = Astro.props
---

<div class="flex flex-col gap-2.5">
  <h3 class="flex gap-2.5 text-2xl font-bold">
    <span class="w-8">
      <Icon name="timeline" alt="" />
    </span>
    <span>{title}</span>
  </h3>
  {
    image && (
      <Image class="w-full" src={image} alt={`${title}の様子`} sizes="100%" />
    )
  }
  <div class="text-justify-ja">
    <slot />
  </div>
</div>
