---
import Icon from '@/components/Icon.astro'
interface Props {
  title: string
  date: string
  description: string
}

const { title, date, description } = Astro.props
---

<li
  class="flex-1 min-w-[18rem] p-5 rounded-xl border border-slate-300 bg-white drop-shadow flex flex-col gap-2"
>
  <h2 class="text-xl font-bold">{title}</h2>
  <p class="flex items-center gap-2 text-slate-600">
    <Icon name="clock" alt="開催日時" class="w-4" />
    <span>{date}</span>
  </p>
  <p class="text-justify-ja">
    {description}
  </p>
</li>
