---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/components/common/Hero.astro'
import AboutSection from '@/components/index/about/AboutSection.astro'
import ActivitySection from '@/components/index/activity/ActivitySection.astro'
import JoinSection from '@/components/index/join/JoinSection.astro'
import FaqSection from '@/components/index/faq/FaqSection.astro'
---

<Layout
  description="OUCC（大阪大学コンピュータクラブ）は、コンピュータを使ったものづくりに関心を持つ学生が交流するサークルです。プログラミングやお絵描き、3Dモデリングなどの活動を行っています。"
  showJoinLink
>
  <Hero title="OUCC" copy="デジタルの世界を共有しよう" />
  <main>
    <AboutSection />
    <ActivitySection />
    <JoinSection />
    <FaqSection />
